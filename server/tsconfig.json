{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"compilerOptions": {
		"noEmit": true,
		"target": "es2016",
		"lib": ["ESNext", "DOM"],
		"allowJs": false,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": false,
		"noUnusedParameters": true,
		"noImplicitAny": true
	},
	"include": ["."]
}
